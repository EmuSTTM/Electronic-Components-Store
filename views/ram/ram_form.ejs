<%- include('../partials/header.ejs') %>

<form action="/components/ram/create" method="post">
    
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" name="name" id="name" required>
    </div>
    <div class="form-group">
        <label for="model">Model</label>
        <input type="text" class="form-control" name="model" id="model" required>
    </div>
    <div class="form-group">
        <label for="size">Size</label>
        <input type="number" class="form-control" name="size" id="size" min="0" required>
    </div>
    <div class="form-group">
        <label for="speed">Speed RAM</label>
        <input type="number" class="form-control" name="speed" id="speed" min="0" required>
    </div>
    <div class="form-group">
        <label for="type">Type</label>
        <select class="form-control" name="type" id="type" required>
            <option value="DDR3">DDR3</option>
            <option value="DDR4">DDR4</option>
            <option value="DDR5">DDR5</option>

          </select>
    </div>
    <div class="form-group">
        <label for="brand">Brand</label>
        <div>
            <% for (let brand of brands) { %>
                <input type="checkbox" name="brand" id="<%= brand._id %>" value="<%= brand._id %>">
                <label for="<%= brand._id %>"> <%= brand.name %> </label>
            <% } %>
            <div class="invalid-feedback">
                <% if(typeof errors !== 'undefined'){ %>
                    <% errors.forEach(function(error) { %>
                        <% if (error.param === 'brand') { %>
                            <div class="alert alert-danger">
                                <%= error.msg %>
                            </div>
                        <% }; %>
                    <% }); %>
                <% } %>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="price">Price</label>
        <input type="number" class="form-control" name="price" id="price" min="0" required>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form><br>
<% if(typeof errors !== 'undefined'){ %>
    <% errors.forEach(function(error) { %>
        <div class="alert alert-danger">
            <%= error.msg %>
        </div>
    <% }); %>
<% } %>

<%- include('../partials/footer.ejs') %>
