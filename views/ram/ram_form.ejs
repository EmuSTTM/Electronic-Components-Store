<%- include('../partials/header.ejs') %>

<form action="" method="post" enctype="multipart/form-data">
    
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" value="<%= (typeof ram === 'undefined' ? '' : ram.name) %>" class="form-control" name="name" id="name" required>
    </div>
    <div class="form-group">
        <label for="image">Image</label>
        <p class="alert-danger">For the moment, you can have only one image for product. In the future, this functionality will be expanded</p>
        <input type="file" multiple name="image" id="image"  class="form-control" >
    </div>
    <div class="form-group">
        <label for="model">Model</label>
        <input type="text" value="<%= (typeof ram === 'undefined' ? '' : ram.model) %>" class="form-control" name="model" id="model" required>
    </div>
    <div class="form-group">
        <label for="size">Memory Size</label>
        <input type="number" value="<%= (typeof ram === 'undefined' ? '' : ram.size) %>" class="form-control" name="size" id="size" min="0" required>
    </div>
    <div class="form-group">
        <label for="speed">Speed RAM</label>
        <input type="number" value="<%= (typeof ram === 'undefined' ? '' : ram.speed) %>" class="form-control" name="speed" id="speed" min="0" required>
    </div>
    <div class="form-group">
        <label for="type">Type</label>
        <select class="form-control" name="type" id="type" required>
            <option <%= ("DDR3" === ram.type ? 'selected' : '') %> value="DDR3">DDR3</option>
            <option <%= ("DDR4" === ram.type ? 'selected' : '') %> value="DDR4">DDR4</option>
            <option <%= ("DDR5" === ram.type ? 'selected' : '') %> value="DDR5">DDR5</option>

          </select>
    </div>
    <div class="form-group">
        <label for="brand">Brand</label>
        <div>
            <% for (let brand of brands) { %>
                <input type="checkbox" name="brand" id="<%= brand._id %>" value="<%= brand._id %>" %>" <%= brand.checked ? 'checked' : '' %>>
                <label for="<%= brand._id %>"> <%= brand.name %> </label> 
            <% } %>
            <div class="invalid-feedback">
                <% if(typeof errors !== 'undefined'){ %>
                    <% errors.forEach(function(error) { %>
                        <% if (error.param === 'brand') { %>
                            <div class="alert alert-danger">
                                <%= error.msg %>
                            </div>
                        <% }; %>
                    <% }); %>
                <% } %>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="price">Price</label>
        <input type="number" value="<%= (typeof ram === 'undefined' ? '' : ram.price) %>" class="form-control" name="price" id="price" min="0" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form><br>
<% if(typeof errors !== 'undefined'){ %>
    <% errors.forEach(function(error) { %>
        <div class="alert alert-danger">
            <%= error.msg %>
        </div>
    <% }); %>
<% } %>

<%- include('../partials/footer.ejs') %>
