<%- include('../partials/header.ejs') %>

<div class="container">
  <h1 class="text-center my-5"> <%= title %> </h1>

  <div class="row">
    <% for (var i=0; i< motherboard_list.length; i++) { %>
      <div class="col-md-3 mb-3">
        <div class="card h-100">
          <% const prod = {name:motherboard_list[i].name, id:motherboard_list[i]._id, price: motherboard_list[i].price, image:motherboard_list[i].image  }%>

          <img src="<%=  typeof motherboard_list[i].toObject().image !== 'undefined' ? '/images/' + motherboard_list[i].image : 'https://via.placeholder.com/300x200' %>" class="card-img-top" alt="<%= motherboard_list[i].name%>">
          <div class="card-body">
            <h5 class="card-title"> <a href="<%= motherboard_list[i].url %>"><%= motherboard_list[i].name %></a>  </h5> 
            <p class="card-text">
              <% for (var j = 0; j < motherboard_list[i].brand.length; j++) { %>
                <%= motherboard_list[i].brand[j].name %>
              <% } %> -
              <%= motherboard_list[i].chipset %> <br>
              <span class="badge badge-success badge-pill">
                <%= "$" + motherboard_list[i].price.toLocaleString() + " ARS"%>
              </span>
            </p>
            <a href="<%= motherboard_list[i].url %>" class="btn btn-primary">See More</a>
            <button  value="<%= JSON.stringify(prod)%>" class="btn btn-primary product-cart">Add Cart</button>
          </div>
        </div>
      </div>
    <% } %>
  </div>
  <% if(motherboard_list.length === 0) { %>
    <div class="text-center my-5">
      <h3> There are no motherboards.</h3>
    </div>
  <% } %>
</div>

<%- include('../partials/footer.ejs') %>

