<%- include('../partials/header.ejs') %>

<div class="container">


  <div class="row" id="container_list-products">
    <% for (var i=0; i< gpu_list.length; i++) { %>
    <div class="col-md-3 mb-3">
      <div class="card h-100">
        <% const prod = {name:gpu_list[i].name, id:gpu_list[i]._id, price: gpu_list[i].price, image:gpu_list[i].image  }%>

        <img src="<%=  typeof gpu_list[i].toObject().image !== 'undefined' ? '/images/' + gpu_list[i].image : 'https://via.placeholder.com/300x200' %>" class="card-img-top" alt="<%= gpu_list[i].name%>">
        <div class="card-body">
          <h5 class="card-title"> <a href="<%= gpu_list[i].url %>"><%= gpu_list[i].name %></a> </h5>
          <p class="card-text">
            <% for (var j = 0; j < gpu_list[i].brand.length; j++) { %>
            <%= gpu_list[i].brand[j].name %>
            <% } %>


            Core clock: <%= gpu_list[i].core_clock %> <br>
            Memory: <%= gpu_list[i].memory %><br>
            <span class="badge badge-success badge-pill">
              <%= "$" + gpu_list[i].price.toLocaleString() + " ARS"%>
            </span>
          </p>
          <a href="<%= gpu_list[i].url %>" class="btn btn-primary">See More</a>
          <button value="<%= JSON.stringify(prod)%>" class="btn btn-primary product-cart">Add Cart</button>
        </div>
      </div>
    </div>
    <% } %>
  </div>
  <% if(gpu_list.length === 0) { %>
  <div class="text-center my-5">
    <h3> There are no gpus.</h3>
  </div>
  <% } %>
</div>
<%- include('../partials/footer.ejs') %>