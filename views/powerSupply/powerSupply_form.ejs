<%- include('../partials/header.ejs') %>

<form action="" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" value="<%= (typeof powerSupply === 'undefined' ? '' : powerSupply.name) %>"class="form-control" name="name" id="name" required>
    </div>
    <div class="form-group">
        <label for="image">Image</label>
        <p class="alert-danger">For the moment, you can have only one image for product. In the future, this functionality will be expanded</p>
        <input type="file" multiple name="image" id="image"  class="form-control" >
    </div>
    <div class="form-group">
        <label for="brand">Brand</label>
        <div>
            <% for (let brand of brands) { %>
                <input type="checkbox" name="brand" id="<%= brand._id %>" value="<%= brand._id %>" %>" <%= brand.checked ? 'checked' : '' %>>
                <label for="<%= brand._id %>"> <%= brand.name %> </label> 
            <% } %>
            <div class="invalid-feedback">
                <% if(typeof errors !== 'undefined'){ %>
                    <% errors.forEach(function(error) { %>
                        <% if (error.param === 'brand') { %>
                            <div class="alert alert-danger">
                                <%= error.msg %>
                            </div>
                        <% }; %>
                    <% }); %>
                <% } %>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="model">Model</label>
        <input type="text" value="<%= (typeof powerSupply === 'undefined' ? '' : powerSupply.model) %>"class="form-control" name="model" id="model" required>
    </div>
    <div class="form-group">
        <label for="power">Power</label>
        <input type="number" value="<%= (typeof powerSupply === 'undefined' ? '' : powerSupply.power) %>"class="form-control" name="power" id="power" min="0" required>
    </div>
    <div class="form-group">
        <label for="certifications">Certifications</label>
        <select class="form-control" name="certifications" id="certifications" required>
            <option <%= ("80+ Bronze" === powerSupply.certifications.toString() ? 'selected' : '') %> value="80+ Bronze">80+ Bronze</option>
            <option <%= ("80+ Silver" === powerSupply.certifications.toString() ? 'selected' : '') %> value="80+ Silver">80+ Silver</option>
            <option <%= ("80+ Gold" === powerSupply.certifications.toString() ? 'selected' : '') %> value="80+ Gold">80+ Gold</option>
            <option <%= ("80+ Platinum" === powerSupply.certifications.toString() ? 'selected' : '') %> value="80+ Platinum">80+ Platinum</option>
            <option <%= ("80+ Titanium" === powerSupply.certifications.toString() ? 'selected' : '') %> value="80+ Titanium">80+ Titanium</option>
          </select>
    </div>
    <div class="form-group">
        <label for="price">Price</label>
        <input type="number" class="form-control" value="<%= (typeof powerSupply === 'undefined' ? '' : powerSupply.price) %>"name="price" id="price" min="0" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form><br>
<% if(typeof errors !== 'undefined'){ %>
    <% errors.forEach(function(error) { %>
        <div class="alert alert-danger">
            <%= error.msg %>
        </div>
    <% }); %>
<% } %>

<%- include('../partials/footer.ejs') %>
