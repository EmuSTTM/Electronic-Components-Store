
<%- include('../partials/header.ejs') %>
<div class="container">
    <h1 class="text-center"><%= title %></h1>
    <br>
    <div class="row">
      <% for (var i=0; i< storage_list.length; i++) { %>
        <div class="col-md-4">
          <div class="card text-center">
            <div class="card-header">
              <h5><a href="<%= storage_list[i].url %>"> <%= storage_list[i].name %> </a></h5>
            </div>
            <div class="card-body">
              <p class="card-text">Brand: 
                <% for (var j=0; j< storage_list[i].brand.length; j++) { %>
                  <%= storage_list[i].brand[j].name %>
                  <% if (j != storage_list[i].brand.length -1) { %>
                    ,
                  <% } %>
                <% } %>
              </p>
              <p class="card-text">Type: <%= storage_list[i].type %></p>
              <p class="card-text">Interface: <%= storage_list[i].interface %></p>
              <p class="card-text">Price: $ <%= storage_list[i].price %></p>
            </div>
          </div>
          <br>
        </div>
      <% } %>
    </div>
    <% if(storage_list.length === 0) { %>
      <div class="alert alert-danger text-center" role="alert">
        There are no storages.
      </div>
    <% } %>
  </div>
  
  <%- include('../partials/footer.ejs') %>
  
  